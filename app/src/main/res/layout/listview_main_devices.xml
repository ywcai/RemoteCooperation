<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:theme="@style/CardView.Light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:civ="http://schemas.android.com/apk/res-auto"
            android:id="@+id/device_mode"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/qq_login"
            civ:civ_border_width="2dp" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/device_mode"
            android:ellipsize="marquee"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="deviceName"
            android:textColor="#6b6969"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/device_name"
            android:layout_below="@+id/device_name"
            android:layout_marginTop="10dp"
            android:ellipsize="marquee"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="device_id"
            android:textColor="#6b6969"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/device_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/device_id"
            android:layout_below="@+id/device_id"
            android:layout_marginTop="10dp"
            android:ellipsize="marquee"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="643320"
            android:textColor="#6b6969"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/device_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="right|center_vertical"
            android:text="onLine"
            android:textColor="#6b6969"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/device_owner"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/device_code"
            android:layout_alignParentRight="true"
            android:ellipsize="marquee"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="本机"
            android:textColor="#6b6969"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>